generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model AutoInviteForum {
  /// Guild of the forum
  guild      Guild   @relation(fields: [guildId], references: [id])
  guildId    String
  /// Channel id of the forum
  id         String  @id
  /// 招待を禁止したいときのタグ(反転可能)
  ignoredTag String?
  /// 自動招待の反転
  inverted   Boolean @default(false)
}

model Guild {
  id               String            @id
  bulkInviteRoleId String
  autoInviteForum  AutoInviteForum[]
}
